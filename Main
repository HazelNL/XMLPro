public class Main {

  public static void main(String[] args) {
  
    // Characterクラス型の配列を用意
    Character[] c = new Character[3];
    // それぞれのインスタンスを生成    
    Character[0] = new Masicain("山平", 100);
    Character[1] = new Monk("今村", 100);
    Character[2] = new Masicain(梅田", 100);
    
    // それぞれのattack()メソッドを実行
    for(int index = 0; index < c.length; index++) {
      Character[index].attack();
    }

  }

}
