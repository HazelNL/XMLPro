public class Main {

	public static void main(String[] args) {
  
	    // Characterクラス型の配列を用意
	    Character[] chara = new Character[3];
	    // それぞれのインスタンスを生成 
	    chara[0] = new Masician("山平", 100);
	    chara[1] = new Warrior("今村", 100);
	    chara[2] = new Monk("梅田", 100);
	    
	    // それぞれのattack()メソッドを実行
	    for(int i = 0; i < chara.length; i++) {
	      chara[i].attack();
	    }

	  }
	}
